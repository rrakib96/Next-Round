import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        while (n-- > 0) {
            int m = input.nextInt();
            int firstNumber = 0;
            int seconNumber = 0;
            for (int i = 0; i < m; i++) {
                int x = input.nextInt();
                if ( x == 0) {
                    seconNumber++;
                    if (seconNumber > firstNumber) {
                        firstNumber = seconNumber;
                    }

                }
                else{
                    seconNumber = 0;
                }

            }
            System.out.println(firstNumber);
        }
    }
}
